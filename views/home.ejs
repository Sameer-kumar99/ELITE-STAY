    <div class="section-header text-center mb-5">
      <h2 class="section-title">
        <i></i>&nbsp;&nbsp;&nbsp;&nbsp;Featured Properties
      </h2>
    </div>
    
    <div class="properties-grid" id="propertiesGrid">
      <div class="row g-4 justify-content-center">
        <% properties.forEach((p, index) => { %>
          <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 property-item" 
               data-location="<%= p.location.toLowerCase() %>" 
               data-price="<%= p.price || 0 %>" 
               data-name="<%= p.title.toLowerCase() %>">
            <div class="card property-card h-100">
              <div class="position-relative image-container">
                <% if (p.images && p.images.length) { %>
                  <img src="<%= p.images[0] %>" class="card-img-top" alt="<%= p.title %>">
                <% } else { %>
                  <div class="placeholder-image d-flex align-items-center justify-content-center">
                    <i class="fas fa-home fa-4x text-muted"></i>
                  </div>
                <% } %>
                
                <span class="guest-favorite-badge">Guest favourite</span>
                <button class="favorite-btn-new" onclick="toggleFavorite(this, '<%= p._id %>')">
                  <i class="fa-thin fa-heart"></i>
                </button>
                
                <div class="image-overlay">
                  <div class="overlay-content">
                    <a href="/properties/<%= p._id %>" class="btn btn-light btn-sm">
                      <!-- <i class="fas fa-eye me-1"></i>Quick View -->
                    </a>
                  </div>
                </div>
              </div>
              
