<script>
  // Search and Filter Functionality (preserved)
  document.addEventListener('DOMContentLoaded', function() {
    const locationSearch = document.getElementById('locationSearch');
    const priceFilter = document.getElementById('priceFilter');
    const sortBy = document.getElementById('sortBy');
    const searchBtn = document.querySelector('.btn-search');
    const propertyItems = document.querySelectorAll('.property-item');
    
    // Search functionality
    function filterProperties() {
      if (!locationSearch || !priceFilter || !sortBy) return;
      
      const locationValue = locationSearch.value.toLowerCase();
      const priceValue = parseInt(priceFilter.value) || Infinity;
      const sortValue = sortBy.value;
      
      let visibleItems = [];
      
      propertyItems.forEach(item => {
        const location = item.dataset.location;
        const price = parseInt(item.dataset.price) || 0;
        
        const locationMatch = !locationValue || location.includes(locationValue);
        const priceMatch = price <= priceValue;
        
        if (locationMatch && priceMatch) {
          item.style.display = 'block';
          visibleItems.push(item);
        } else {
          item.style.display = 'none';
        }
      });
      
      // Sort visible items
      const container = document.querySelector('.properties-grid .row');
      const sortedItems = visibleItems.sort((a, b) => {
        switch(sortValue) {
          case 'price-low':
            return parseInt(a.dataset.price) - parseInt(b.dataset.price);
          case 'price-high':
            return parseInt(b.dataset.price) - parseInt(a.dataset.price);
          case 'name':
            return a.dataset.name.localeCompare(b.dataset.name);
          default:
            return 0;
        }
      });
      
      // Reorder DOM elements
      if (container) {
        sortedItems.forEach(item => {
          container.appendChild(item);
        });
      }
      
      // Show/hide no results message
      const noResults = document.getElementById('noResults');
      if (visibleItems.length === 0 && !noResults && container) {
        const message = document.createElement('div');
        message.id = 'noResults';
        message.className = 'col-12 text-center py-5';
        message.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h4>No Properties Found</h4>
            <p class="text-muted">Try adjusting your search criteria</p>
            <button class="btn btn-primary" onclick="clearFilters()">
              <i class="fas fa-refresh me-2"></i>Clear Filters
            </button>
          </div>
        `;
        container.appendChild(message);
      } else if (visibleItems.length > 0 && noResults) {
        noResults.remove();
      }
    }
    
    // Event listeners (only if elements exist)
    if (searchBtn) searchBtn.addEventListener('click', filterProperties);
    if (locationSearch) locationSearch.addEventListener('input', filterProperties);
    if (priceFilter) priceFilter.addEventListener('change', filterProperties);
    if (sortBy) sortBy.addEventListener('change', filterProperties);
    
    // Clear filters function
    window.clearFilters = function() {
      if (locationSearch) locationSearch.value = '';
      if (priceFilter) priceFilter.value = '';
      if (sortBy) sortBy.value = 'newest';
      filterProperties();
    };
  });
  
  // Favorite toggle functionality (updated for new button class)
  function toggleFavorite(button, propertyId) {
  const icon = button.querySelector('i');

  if (icon.classList.contains('fa-thin')) {
    icon.classList.remove('fa-thin');
    icon.classList.add('fa-solid');
    button.classList.add('favorited');
    showNotification('Added to favorites!', 'success');
  } else {
    icon.classList.remove('fa-solid');
    icon.classList.add('fa-thin');
    button.classList.remove('favorited');
    showNotification('Removed from favorites!', 'info');
  }
}

  
  // Notification function (preserved)
  function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `alert alert-${type} notification-toast`;
    notification.innerHTML = `
      <i class="fas fa-${type === 'success' ? 'check' : 'info'}-circle me-2"></i>
      ${message}
    `;
    
    notification.style.cssText = `
      position: fixed;
      top: 100px;
      right: 20px;
      z-index: 9999;
      min-width: 300px;
      animation: slideInRight 0.3s ease-out;
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.style.animation = 'slideOutRight 0.3s ease-in';
      setTimeout(() => {
        notification.remove();
      }, 300);
    }, 3000);
  }
  
  // Add slide animations (preserved)
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slideInRight {
      from { transform: translateX(100%); opacity: 0; }
      to { transform: translateX(0); opacity: 1; }
    }
    @keyframes slideOutRight {
      from { transform: translateX(0); opacity: 1; }
      to { transform: translateX(100%); opacity: 0; }
    }
  `;
  document.head.appendChild(style);
  
  // Property card animations on scroll (preserved)
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const propertyObserver = new IntersectionObserver(function(entries) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
