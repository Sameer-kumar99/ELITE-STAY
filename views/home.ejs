                <p class="property-location mb-2">
                  <i class="fas fa-map-marker-alt me-1"></i>
                  <%= p.location %>
                </p>
                
                <h5 class="property-title mb-2">
                  <%= p.title %>
                </h5>
                
                <% if (p.description) { %>
                  <p class="property-dates mb-2 text-muted">
                    <%= p.description.length > 50 ? p.description.substring(0, 50) + '...' : p.description %>
                  </p>
                <% } %>
                
                <div class="property-rating-new mb-3">
                  <i class="fas fa-star rating-star"></i>
                  <span class="rating-text">4.9</span>
                  <span class="review-count text-muted">(24 reviews)</span>
                </div>
                
                <% if (p.price) { %>
                  <div class="property-price">
                    <span class="price-amount">$<%= p.price %></span>
                    <span class="price-period"> night</span>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    
