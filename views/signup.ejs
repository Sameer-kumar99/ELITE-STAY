            <p class="mb-0 text-muted">Already have an account?</p>
            <a href="/login" class="btn btn-outline-success btn-login mt-2">
              <i class="fas fa-sign-in-alt me-2"></i>Sign In Instead
            </a>
          </div>
        </div>
      </div>
      
      <div class="features-section mt-4">
