

<div class="properties-header mb-5">
  <div class="row align-items-center">
    <div class="col-md-8">
      <h1 class="page-title mb-3">
        <i class="fas fa-building me-3"></i>All Properties
      </h1>
      <p class="page-subtitle text-muted">Manage your property listings</p>
    </div>
    <div class="col-md-4 text-md-end">
      <a href="/properties/new" class="btn btn-success btn-add-property">
        <i class="fas fa-plus me-2"></i>Add New Property
      </a>
    </div>
  </div>
</div>

<% if (properties && properties.length) { %>
  <div class="properties-grid">
    <div class="row g-4">
      <% properties.forEach((p, index) => { %>
        <div class="col-xl-4 col-lg-6 col-md-6">
          <div class="property-card">
            <div class="card h-100">
              <div class="card-header-custom">
                <div class="property-badge">
                  <span class="badge bg-primary">
                    <i class="fas fa-star me-1"></i>Listed
                  </span>
                </div>
              </div>
              
              <div class="card-body">
                <div class="property-title-section mb-3">
                  <h5 class="property-title">
                    <a href="/properties/<%= p._id %>" class="title-link">
                      <i class="fas fa-home me-2"></i><%= p.title %>
                    </a>
                  </h5>
                </div>
                
                <div class="property-info">
                  <div class="location-info mb-3">
                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                    <span class="location-text"><%= p.location %></span>
                  </div>
                  
                  <% if (p.price) { %>
                    <div class="price-info mb-3">
                      <span class="price-tag">
                        <i class="fas fa-tag me-2"></i>$<%= p.price %>
                        <small class="text-muted">/night</small>
                      </span>
                    </div>
                  <% } %>
                  
                  <% if (p.description) { %>
                    <div class="description-preview mb-3">
                      <p class="text-muted small">
                        <%= p.description.length > 100 ? p.description.substring(0, 100) + '...' : p.description %>
                      </p>
                    </div>
                  <% } %>
                </div>
                
                <div class="property-actions mt-auto">
                  <div class="d-flex gap-2">
                    <a href="/properties/<%= p._id %>" class="btn btn-primary btn-sm flex-fill">
                      <i class="fas fa-eye me-1"></i>View
                    </a>
                    <a href="/properties/<%= p._id %>/edit" class="btn btn-secondary btn-sm flex-fill">
                      <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <button class="btn btn-outline-danger btn-sm" 
                            onclick="confirmDelete('<%= p._id %>', '<%= p.title %>')">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<% } else { %>
  <div class="empty-state">
    <div class="text-center py-5">
      <div class="empty-icon mb-4">
        <i class="fas fa-home fa-5x text-muted"></i>
      </div>
      <h3 class="empty-title mb-3">No Properties Yet</h3>
      <p class="empty-description text-muted mb-4">
        Start building your property portfolio by adding your first listing.
      </p>
      <a href="/properties/new" class="btn btn-success btn-lg btn-get-started">
        <i class="fas fa-plus me-2"></i>Add Your First Property
      </a>
    </div>
  </div>
<% } %>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-exclamation-triangle text-warning me-2"></i>
          Confirm Deletion
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p class="mb-3">Are you sure you want to delete this property?</p>
        <div class="alert alert-warning">
          <i class="fas fa-info-circle me-2"></i>
          This action cannot be undone. All associated bookings will also be affected.
        </div>
        <p class="fw-bold" id="propertyNameToDelete"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-2"></i>Cancel
        </button>
        <form id="deleteForm" method="POST" class="d-inline">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete Property
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
