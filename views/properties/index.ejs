    background: rgba(255,255,255,0.8);
    padding: 2rem;
    border-radius: 25px;
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.05);
  }
  
  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }
  
  .page-subtitle {
    font-size: 1.1rem;
    font-weight: 500;
  }
  
  .btn-add-property {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border: none;
    border-radius: 15px;
    padding: 12px 25px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    transition: all 0.3s ease;
  }
  
  .btn-add-property:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
  }
  
  .properties-grid {
    margin-top: 2rem;
  }
  
  .property-card .card {
    border: none;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }
  
  .property-card:hover .card {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
  }
  
  .card-header-custom {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    padding: 1rem 1.5rem;
    border-bottom: none;
  }
  
  .property-badge .badge {
    border-radius: 10px;
    padding: 6px 12px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .property-title-section {
    border-bottom: 1px solid rgba(0,0,0,0.1);
    padding-bottom: 1rem;
  }
  
  .property-title {
    margin-bottom: 0;
    font-size: 1.2rem;
    font-weight: 600;
  }
  
  .title-link {
    color: #2c3e50;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .title-link:hover {
    color: #667eea;
  }
  
  .location-info {
    display: flex;
    align-items: center;
    font-size: 0.95rem;
    color: #6c757d;
    font-weight: 500;
  }
  
  .price-info {
    background: rgba(102, 126, 234, 0.1);
    padding: 10px 15px;
    border-radius: 12px;
    text-align: center;
  }
  
  .price-tag {
    font-size: 1rem;
    font-weight: 600;
    color: #667eea;
  }
  
  .description-preview p {
    line-height: 1.5;
    margin-bottom: 0;
  }
  
  .property-actions {
    padding-top: 1rem;
    border-top: 1px solid rgba(0,0,0,0.1);
  }
  
  .property-actions .btn {
    border-radius: 10px;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  .property-actions .btn:hover {
    transform: translateY(-1px);
  }
  
  .empty-state {
    background: rgba(255,255,255,0.8);
    border-radius: 25px;
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    margin: 3rem 0;
  }
  
  .empty-icon {
    opacity: 0.6;
  }
  
  .empty-title {
    color: #2c3e50;
    font-weight: 600;
  }
  
  .empty-description {
    font-size: 1.1rem;
    max-width: 400px;
    margin: 0 auto 2rem;
  }
  
  .btn-get-started {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border: none;
    border-radius: 15px;
    padding: 15px 30px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    transition: all 0.3s ease;
  }
  
  .btn-get-started:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
  }
  
  .modal-content {
    border: none;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0,0,0,0.2);
  }
  
  .modal-header {
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 133, 27, 0.1) 100%);
    border-bottom: none;
    border-radius: 20px 20px 0 0;
    padding: 1.5rem;
  }
  
  .modal-body {
    padding: 1.5rem;
  }
  
  .modal-footer {
    border-top: none;
    padding: 1.5rem;
    justify-content: center;
    gap: 1rem;
  }
  
  @media (max-width: 768px) {
    .properties-header {
      padding: 1.5rem;
    }
    
    .page-title {
      font-size: 2rem;
      text-align: center;
    }
    
    .btn-add-property {
      width: 100%;
      margin-top: 1rem;
    }
    
    .property-actions .btn {
      font-size: 0.8rem;
      padding: 6px 8px;
    }
  }
</style>

<script>
  function confirmDelete(propertyId, propertyTitle) {
    document.getElementById('propertyNameToDelete').textContent = propertyTitle;
    document.getElementById('deleteForm').action = `/properties/${propertyId}?_method=DELETE`;
    
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    deleteModal.show();
  }
</script>