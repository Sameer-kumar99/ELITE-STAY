    font-size: 0.875rem;
    margin-top: 0.25rem;
  }
  
  .property-features {
    background: rgba(248,249,250,0.6);
    padding: 1.5rem;
    border-radius: 20px;
    border: 1px solid #e9ecef;
  }
  
  .feature-check {
    background: rgba(255,255,255,0.8);
    padding: 0.75rem 1rem;
    border-radius: 12px;
    border: 1px solid #e9ecef;
    transition: all 0.3s ease;
