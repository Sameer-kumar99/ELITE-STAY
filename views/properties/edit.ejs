    transform: translateY(-2px);
  }
  
  .preview-card {
    background: rgba(255,255,255,0.9);
    backdrop-filter: blur(10px);
    border: none;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
  }
  
  .preview-card .card-header {
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 133, 27, 0.1) 100%);
    border: none;
    border-radius: 20px 20px 0 0;
    padding: 1rem 1.5rem;
  }
  
  .preview-title {
    color: #2c3e50;
