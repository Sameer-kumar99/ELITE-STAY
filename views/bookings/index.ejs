<div class="bookings-header mb-5">
  <div class="text-center">
    <div class="header-icon mb-3">
      <i class="fas fa-calendar-check fa-4x text-primary"></i>
    </div>
    <h1 class="page-title">My Bookings</h1>
    <p class="page-subtitle text-muted">Manage and track your reservations</p>
  </div>
</div>

<% if (bookings && bookings.length) { %>
  <div class="bookings-container">
    <div class="row g-4">
      <% bookings.forEach((booking, index) => { %>
        <div class="col-lg-6 col-xl-4">
          <div class="booking-card">
            <div class="card h-100">
              <div class="card-header booking-header">
                <div class="d-flex justify-content-between align-items-center">
                  <h6 class="card-title mb-0">
                    <i class="fas fa-bookmark me-2"></i>Booking #<%= index + 1 %>
                  </h6>
                  <span class="status-badge status-<%= booking.status.toLowerCase() %>">
                    <%= booking.status %>
                  </span>
                </div>
              </div>
              
              <div class="card-body">
                <div class="property-info mb-3">
                  <h5 class="property-name">
                    <i class="fas fa-home me-2 text-primary"></i>
                    <%= booking.propertyId.title %>
                  </h5>
                </div>
                
                <div class="booking-details">
                  <div class="detail-row">
                    <div class="detail-icon">
                      <i class="fas fa-calendar-day text-success"></i>
                    </div>
                    <div class="detail-content">
                      <strong>Check-in:</strong>
                      <span class="date-display">
                        <%= booking.checkInDate.toDateString() %>
                      </span>
                    </div>
                  </div>
                  
                  <div class="detail-row">
                    <div class="detail-icon">
                      <i class="fas fa-calendar-times text-warning"></i>
                    </div>
                    <div class="detail-content">
                      <strong>Check-out:</strong>
                      <span class="date-display">
                        <%= booking.checkOutDate.toDateString() %>
                      </span>
                    </div>
                  </div>
                  
                  <div class="detail-row">
                    <div class="detail-icon">
                      <i class="fas fa-clock text-info"></i>
                    </div>
                    <div class="detail-content">
                      <strong>Duration:</strong>
                      <span class="duration-display">
                        <% 
                          const timeDiff = booking.checkOutDate.getTime() - booking.checkInDate.getTime();
                          const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));
                        %>
                        <%= daysDiff %> night<%= daysDiff > 1 ? 's' : '' %>
                      </span>
                    </div>
                  </div>
                </div>
                
                <div class="booking-actions mt-4">
                  <% if (booking.status.toLowerCase() === 'confirmed') { %>
                    <button class="btn btn-success btn-sm me-2" disabled>
                      <i class="fas fa-check me-1"></i>Confirmed
                    </button>
                  <% } else if (booking.status.toLowerCase() === 'pending') { %>
                    <button class="btn btn-warning btn-sm me-2" disabled>
                      <i class="fas fa-hourglass-half me-1"></i>Pending
                    </button>
                  <% } else if (booking.status.toLowerCase() === 'cancelled') { %>
                    <button class="btn btn-danger btn-sm me-2" disabled>
                      <i class="fas fa-times me-1"></i>Cancelled
                    </button>
                  <% } %>
                  
                  <button class="btn btn-outline-primary btn-sm" 
                          onclick="viewBookingDetails('<%= booking._id %>')">
                    <i class="fas fa-eye me-1"></i>Details
                  </button>
                </div>
              </div>
              
              <div class="card-footer booking-footer">
                <small class="text-muted">
                  <i class="fas fa-clock me-1"></i>
                  Booked on <%= booking.createdAt ? booking.createdAt.toDateString() : 'N/A' %>
                </small>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<% } else { %>
  <div class="empty-bookings">
    <div class="text-center py-5">
      <div class="empty-icon mb-4">
        <i class="fas fa-calendar-times fa-5x text-muted"></i>
      </div>
      <h3 class="empty-title mb-3">No Bookings Yet</h3>
      <p class="empty-description text-muted mb-4">
        You haven't made any reservations yet. Start exploring amazing properties!
      </p>
      <a href="/" class="btn btn-primary btn-lg btn-explore">
        <i class="fas fa-search me-2"></i>Explore Properties
      </a>
    </div>
  </div>
<% } %>

<!-- Booking Details Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-info-circle me-2"></i>Booking Details
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="bookingDetailsContent">
        <!-- Details will be loaded here -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-2"></i>Close
        </button>
      </div>
    </div>
  </div>
</div>

