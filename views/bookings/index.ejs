    initializeModals();
  });
  
  // Update booking statistics
  function updateBookingStats() {
    const bookingItems = document.querySelectorAll('.booking-item');
    let confirmed = 0, pending = 0, cancelled = 0;
    
    bookingItems.forEach(item => {
      const status = item.dataset.status;
      switch(status) {
        case 'confirmed': confirmed++; break;
        case 'pending': pending++; break;
        case 'cancelled': cancelled++; break;
      }
    });
    
    // Update counters with animation
    animateCounter('confirmedCount', confirmed);
    animateCounter('pendingCount', pending);
    animateCounter('cancelledCount', cancelled);
    animateCounter('totalCount', bookingItems.length);
  }
  
  // Animate counter
  function animateCounter(id, target) {
    const element = document.getElementById(id);
    let current = 0;
    const increment = target / 20;
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        element.textContent = target;
        clearInterval(timer);
      } else {
        element.textContent = Math.floor(current);
      }
    }, 50);
  }
  
  // Initialize filter functionality
  function initializeFilters() {
    const statusFilter = document.getElementById('statusFilter');
    const sortBy = document.getElementById('sortBy');
    const propertySearch = document.getElementById('propertySearch');
    
    if (statusFilter) statusFilter.addEventListener('change', applyFilters);
    if (sortBy) sortBy.addEventListener('change', applyFilters);
    if (propertySearch) propertySearch.addEventListener('input', debounce(applyFilters, 300));
  }
  
  // Apply filters
  function applyFilters() {
    const statusFilter = document.getElementById('statusFilter');
    const sortBy = document.getElementById('sortBy');
    const propertySearch = document.getElementById('propertySearch');
    const bookingItems = document.querySelectorAll('.booking-item');
    const noResults = document.getElementById('noResults');
    
    const statusValue = statusFilter ? statusFilter.value.toLowerCase() : '';
    const searchValue = propertySearch ? propertySearch.value.toLowerCase() : '';
    const sortValue = sortBy ? sortBy.value : 'newest';
    
    let visibleItems = [];
    
    // Filter items
    bookingItems.forEach(item => {
      const itemStatus = item.dataset.status;
      const itemProperty = item.dataset.property;
      
      const statusMatch = !statusValue || itemStatus === statusValue;
      const propertyMatch = !searchValue || itemProperty.includes(searchValue);
      
      if (statusMatch && propertyMatch) {
        item.style.display = 'block';
        visibleItems.push(item);
      } else {
        item.style.display = 'none';
      }
    });
    
    // Sort visible items
    const container = document.querySelector('#bookingsGrid');
    const sortedItems = visibleItems.sort((a, b) => {
      switch(sortValue) {
        case 'oldest':
          return parseInt(a.dataset.created) - parseInt(b.dataset.created);
        case 'checkin-soon':
          return parseInt(a.dataset.checkin) - parseInt(b.dataset.checkin);
        case 'checkout-soon':
          return parseInt(a.dataset.checkout) - parseInt(b.dataset.checkout);
        default: // newest
          return parseInt(b.dataset.created) - parseInt(a.dataset.created);
      }
    });
    
    // Reorder DOM elements
    sortedItems.forEach(item => {
      container.appendChild(item);
    });
    
    // Show/hide no results
    if (noResults) {
      noResults.style.display = visibleItems.length === 0 ? 'block' : 'none';
    }
    
    // Update stats for visible items
    updateVisibleStats(visibleItems);
  }
  
  // Update stats for visible items
  function updateVisibleStats(items) {
    let confirmed = 0, pending = 0, cancelled = 0;
    
    items.forEach(item => {
      const status = item.dataset.status;
      switch(status) {
        case 'confirmed': confirmed++; break;
        case 'pending': pending++; break;
        case 'cancelled': cancelled++; break;
      }
    });
    
    // Update counters
    document.getElementById('confirmedCount').textContent = confirmed;
    document.getElementById('pendingCount').textContent = pending;
    document.getElementById('cancelledCount').textContent = cancelled;
    document.getElementById('totalCount').textContent = items.length;
  }
  
  // Clear filters
  function clearFilters() {
    const statusFilter = document.getElementById('statusFilter');
    const sortBy = document.getElementById('sortBy');
    const propertySearch = document.getElementById('propertySearch');
    
    if (statusFilter) statusFilter.value = '';
    if (sortBy) sortBy.value = 'newest';
    if (propertySearch) propertySearch.value = '';
    
    applyFilters();
  }
  
  // Debounce function
  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }
  
