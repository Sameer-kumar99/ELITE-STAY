  }
  
  // Share booking
  function shareBooking(bookingId) {
    if (navigator.share) {
      navigator.share({
        title: 'My Booking - Elite Stay',
        text: 'Check out my booking details',
        url: `${window.location.origin}/bookings/${bookingId}`
      });
    } else {
      // Fallback - copy to clipboard
      navigator.clipboard.writeText(`${window.location.origin}/bookings/${bookingId}`);
      showNotification('Booking link copied to clipboard!', 'success');
    }
  }
  
  // Report issue
  function reportIssue(bookingId) {
