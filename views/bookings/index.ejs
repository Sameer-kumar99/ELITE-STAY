<!-- Enhanced Bookings Header -->
<div class="bookings-header mb-5">
  <div class="row align-items-center">
    <div class="col-md-8">
      <div class="header-content">
        <div class="header-icon mb-3">
          <i class="fas fa-calendar-check fa-4x text-primary"></i>
        </div>
        <h1 class="page-title">My Bookings</h1>
        <p class="page-subtitle text-muted">Manage and track your reservations</p>
      </div>
    </div>
    <div class="col-md-4 text-md-end">
      <div class="header-actions">
        <a href="/" class="btn btn-primary btn-lg">
          <i class="fas fa-search me-2"></i>Book More
        </a>
      </div>
    </div>
  </div>
  
  <!-- Booking Stats -->
  <div class="booking-stats mt-4">
    <div class="row g-3">
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-calendar-check text-success"></i>
          </div>
          <div class="stat-info">
            <h4 class="stat-number" id="confirmedCount">0</h4>
            <p class="stat-label">Confirmed</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-times-circle text-danger"></i>
          </div>
          <div class="stat-info">
            <h4 class="stat-number" id="cancelledCount">0</h4>
            <p class="stat-label">Cancelled</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-calendar-alt text-info"></i>
          </div>
          <div class="stat-info">
            <h4 class="stat-number" id="totalCount">0</h4>
            <p class="stat-label">Total Bookings</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filter and Sort Section -->
<div class="filter-section mb-4">
  <div class="card filter-card">
    <div class="card-body p-3">
      <div class="row g-3 align-items-center">
        <div class="col-md-3">
          <select class="form-select filter-select" id="statusFilter">
            <option value="">All Status</option>
            <option value="confirmed">Confirmed</option>
            <option value="pending">Pending</option>
            <option value="cancelled">Cancelled</option>
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select filter-select" id="sortBy">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="checkin-soon">Check-in Soon</option>
            <option value="checkout-soon">Check-out Soon</option>
          </select>
        </div>
        <div class="col-md-4">
          <input type="text" class="form-control filter-select" id="propertySearch" placeholder="Search by property name...">
        </div>
        <div class="col-md-2">
          <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
            <i class="fas fa-refresh me-1"></i>Clear
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<% if (bookings && bookings.length) { %>
  <div class="bookings-container">
    <div class="row g-4" id="bookingsGrid">
      <% bookings.forEach((booking, index) => { %>
        <div class="col-lg-6 col-xl-4 booking-item" 
             data-status="<%= booking.status.toLowerCase() %>"
             data-property="<%= booking.propertyId.title.toLowerCase() %>"
             data-checkin="<%= booking.checkInDate.getTime() %>"
             data-checkout="<%= booking.checkOutDate.getTime() %>"
             data-created="<%= booking.createdAt ? booking.createdAt.getTime() : Date.now() %>">
          <div class="booking-card">
            <div class="card h-100">
              <div class="card-header booking-header">
                <div class="d-flex justify-content-between align-items-start">
                  <div class="booking-info">
                    <h6 class="card-title mb-1">
                      <i class="fas fa-bookmark me-2"></i>Booking #<%= String(index + 1).padStart(3, '0') %>
                    </h6>
                    <small class="text-muted">
                      <i class="fas fa-clock me-1"></i>
                      <%= booking.createdAt ? booking.createdAt.toDateString() : 'N/A' %>
                    </small>
                  </div>
                  <div class="status-container">
                    <span class="status-badge status-<%= booking.status.toLowerCase() %>">
                      <% if (booking.status.toLowerCase() === 'confirmed') { %>
                        <i class="fas fa-check-circle me-1"></i>
                      <% } else if (booking.status.toLowerCase() === 'pending') { %>
                        <i class="fas fa-hourglass-half me-1"></i>
                      <% } else if (booking.status.toLowerCase() === 'cancelled') { %>
                        <i class="fas fa-times-circle me-1"></i>
                      <% } %>
                      <%= booking.status %>
                    </span>
                  </div>
                </div>
              </div>
              
              <div class="card-body">
                <!-- Property Info -->
                <div class="property-info mb-3">
                  <h5 class="property-name">
                    <i class="fas fa-home me-2 text-primary"></i>
                    <%= booking.propertyId.title %>
                  </h5>
                  <p class="property-location text-muted mb-0">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    <%= booking.propertyId.location %>
                  </p>
                </div>
                
                <!-- Booking Timeline -->
                <div class="booking-timeline mb-4">
                  <div class="timeline-item">
                    <div class="timeline-icon check-in">
                      <i class="fas fa-calendar-day"></i>
                    </div>
                    <div class="timeline-content">
                      <strong>Check-in</strong>
                      <div class="date-display">
                        <%= booking.checkInDate.toLocaleDateString('en-US', { 
                          weekday: 'short', 
                          year: 'numeric', 
                          month: 'short', 
                          day: 'numeric' 
                        }) %>
                      </div>
                      <small class="text-muted">
                        <% 
                          const today = new Date();
                          const checkIn = new Date(booking.checkInDate);
                          const daysUntil = Math.ceil((checkIn - today) / (1000 * 60 * 60 * 24));
                        %>
                        <% if (daysUntil > 0) { %>
                          <i class="fas fa-clock me-1"></i><%= daysUntil %> days to go
                        <% } else if (daysUntil === 0) { %>
                          <i class="fas fa-star me-1"></i>Today!
                        <% } else { %>
                          <i class="fas fa-history me-1"></i>Started
                        <% } %>
                      </small>
                    </div>
                  </div>
                  
                  <div class="timeline-connector"></div>
                  
                  <div class="timeline-item">
                    <div class="timeline-icon check-out">
                      <i class="fas fa-calendar-times"></i>
                    </div>
                    <div class="timeline-content">
                      <strong>Check-out</strong>
                      <div class="date-display">
                        <%= booking.checkOutDate.toLocaleDateString('en-US', { 
                          weekday: 'short', 
                          year: 'numeric', 
                          month: 'short', 
                          day: 'numeric' 
                        }) %>
                      </div>
                      <small class="text-muted">
                        <% 
                          const checkOut = new Date(booking.checkOutDate);
                          const timeDiff = booking.checkOutDate.getTime() - booking.checkInDate.getTime();
                          const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));
                        %>
                        <i class="fas fa-moon me-1"></i><%= daysDiff %> night<%= daysDiff > 1 ? 's' : '' %>
                      </small>
                    </div>
                  </div>
                </div>
                
                <!-- Price Info -->
                <% if (booking.propertyId.price) { %>
                  <div class="price-info mb-4">
                    <div class="price-breakdown">
                      <div class="price-row">
                        <span>Price per night:</span>
                        <span>$<%= booking.propertyId.price %></span>
                      </div>
                      <div class="price-row">
                        <span>Duration:</span>
                        <span>
                          <% 
                            const timeDiff = booking.checkOutDate.getTime() - booking.checkInDate.getTime();
                            const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));
                          %>
                          <%= daysDiff %> night<%= daysDiff > 1 ? 's' : '' %>
                        </span>
                      </div>
                      <hr class="my-2">
                      <div class="price-row total">
                        <strong>Total Amount:</strong>
                        <strong class="text-primary">
                          $<%= booking.propertyId.price * daysDiff %>
                        </strong>
                      </div>
                    </div>
                  </div>
                <% } %>
                
                <!-- Action Buttons -->
                <div class="booking-actions">
                  <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-primary btn-sm flex-fill" 
                            onclick="viewBookingDetails('<%= booking._id %>')">
                      <i class="fas fa-eye me-1"></i>Details
                    </button>
                    
                    <% if (booking.status.toLowerCase() === 'confirmed') { %>
                      <button class="btn btn-success btn-sm flex-fill" disabled>
                        <i class="fas fa-check me-1"></i>Confirmed
                      </button>
                    <% } else if (booking.status.toLowerCase() === 'pending') { %>
                      <button class="btn btn-warning btn-sm flex-fill" 
                              onclick="cancelBooking('<%= booking._id %>')">
                        <i class="fas fa-times me-1"></i>Cancel
                      </button>
                    <% } %>
                    
                    <div class="dropdown">
                      <button class="btn btn-outline-secondary btn-sm dropdown-toggle" 
                              type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                          <a class="dropdown-item" href="#" onclick="downloadReceipt('<%= booking._id %>')">
                            <i class="fas fa-download me-2"></i>Download Receipt
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" onclick="shareBooking('<%= booking._id %>')">
                            <i class="fas fa-share me-2"></i>Share Booking
                          </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                          <a class="dropdown-item text-danger" href="#" onclick="reportIssue('<%= booking._id %>')">
                            <i class="fas fa-exclamation-triangle me-2"></i>Report Issue
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    
    <!-- No Results Message -->
    <div class="no-results text-center py-5" id="noResults" style="display: none;">
      <div class="empty-state">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h4>No Bookings Found</h4>
        <p class="text-muted mb-4">Try adjusting your filters or search criteria</p>
        <button class="btn btn-primary" onclick="clearFilters()">
          <i class="fas fa-refresh me-2"></i>Clear Filters
        </button>
      </div>
    </div>
  </div>
<% } else { %>
  <!-- Enhanced Empty State -->
  <div class="empty-bookings">
    <div class="text-center py-5">
      <div class="empty-animation mb-4">
        <div class="calendar-icon">
          <i class="fas fa-calendar-times fa-5x"></i>
          <div class="floating-dots">
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
          </div>
        </div>
      </div>
      <h3 class="empty-title mb-3">No Bookings Yet</h3>
      <p class="empty-description text-muted mb-4">
        You haven't made any reservations yet. Start exploring amazing properties and create unforgettable memories!
      </p>
      
      <div class="empty-actions">
        <a href="/" class="btn btn-primary btn-lg btn-explore me-3">
          <i class="fas fa-search me-2"></i>Explore Properties
        </a>
        <a href="/properties" class="btn btn-outline-primary btn-lg">
          <i class="fas fa-building me-2"></i>View All Listings
        </a>
      </div>
      
      <!-- Quick Tips -->
      <div class="booking-tips mt-5">
        <div class="row g-3 justify-content-center">
          <div class="col-md-4">
            <div class="tip-card">
              <i class="fas fa-search fa-2x text-primary mb-3"></i>
              <h6>Browse Properties</h6>
              <p class="small text-muted">Explore our curated collection of luxury accommodations</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="tip-card">
              <i class="fas fa-calendar-check fa-2x text-success mb-3"></i>
              <h6>Easy Booking</h6>
              <p class="small text-muted">Book instantly with our secure payment system</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="tip-card">
              <i class="fas fa-headset fa-2x text-info mb-3"></i>
              <h6>24/7 Support</h6>
              <p class="small text-muted">Get help whenever you need it from our support team</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>

<!-- Enhanced Booking Details Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-info-circle me-2"></i>Booking Details
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="bookingDetailsContent">
        <!-- Details will be loaded here -->
        <div class="text-center py-4">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-3 text-muted">Loading booking details...</p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-2"></i>Close
        </button>
        <button type="button" class="btn btn-primary" id="printDetails">
          <i class="fas fa-print me-2"></i>Print Details
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Cancel Booking Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>Cancel Booking
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-warning">
          <i class="fas fa-info-circle me-2"></i>
          Are you sure you want to cancel this booking? This action cannot be undone.
        </div>
        <div class="cancellation-policy">
          <h6>Cancellation Policy:</h6>
          <ul class="small text-muted">
            <li>Free cancellation up to 24 hours before check-in</li>
            <li>50% refund if cancelled within 24 hours</li>
            <li>No refund after check-in time</li>
          </ul>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-arrow-left me-2"></i>Keep Booking
        </button>
        <button type="button" class="btn btn-danger" id="confirmCancel">
          <i class="fas fa-times me-2"></i>Yes, Cancel Booking
        </button>
      </div>
    </div>
  </div>
</div>

